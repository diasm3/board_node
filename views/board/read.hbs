<h1>글읽기</h1>

<div class="row">
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">{{read.title}}</span>
        <span class="card-author">{{read.writer}}</span>
        <div class="card-content">
          <span>{{stripTags read.body}}</span>
        </div>
      </div>
      <div class="card-action">
        <div>

          <form action="/api/edit/{{read.number}}" method="get">
            <input type="submit" value="수정" class="btn darken-grey" />
          </form>

          <form action="/api/delete/{{read.number}}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" value="삭제" class="btn darken-red" />
          </form>

          <a href="/api/list" class="btn darken-orange">취소</a>
        </div>
      </div>

      <div class="row">
        <div class="card deep-purple darken-1">

          {{#each comment}}
            <div class="card-content white-text">
              <div class="card-author">
                {{writer}}
              </div>
              <div class="card-cotent">
          {{!-- <p>{{truncate (stripTags body) 150}}</p> --}}
                {{stripTags body}}
                <form action="/api/commentDelete/{{commentNum}}" method="POST">
                  <input type="hidden" name="_method" value="DELETE" />
                  <input type="submit" class="btn" value="삭제" />
                </form>
                <form action="/api/commentEdit/{{commentNum}}" method="GET">
                  <input type="submit" class="btn" value="수정" />
                </form>
              </div>
            </div>
            <div class="divider"></div>
          {{/each}}

        </div>
      </div>
    </div>
  </div>
</div>
<div class="col s4">
  <div class="card deep-purple darken-1">
    <div class="card-action">
      <form action="/api/commentWrite/{{read.number}}" method="post">
        <input
          value="{{comment.writer}}"
          type="text"
          name="writer"
          id="writer"
          placeholder="사용자 이름을 입력하세요"
        />
        <textarea
          type="text"
          name="body"
          id="body"
          placeholder="제목을 입력하세요"
        >{{comment.body}}</textarea>
        <input type="submit" value="확인" class="btn" />
        <a href="/api/read/{{read.number}}" class="btn">취소</a>
      </form>
    </div>
  </div>
</div>